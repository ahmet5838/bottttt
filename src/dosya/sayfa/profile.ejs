<% if (bot.profil[kisi.id]) { %>
    <div class="ust-profile" style="background: url(<%=bot.ayar.fetch(`user.${kisi.id}.resim`)%>);">
         <% } else { %>
          <div class="ust-profile denemeknk">
      <% } %>
      <br>
      <img  class="profilepic" src="https://cdn.discordapp.com/avatars/<%=kisi.id%>/<%=kisi.avatar%>.png?size=512">
      <br>
      <h3>
        <%=kisi.username%>#<%=kisi.discriminator%>
      </h3>

                                         <% if(bot.ayar.has(`sitesssahip.${kisi.id}.durum`) === true) { %>
                                 <img title="Site Sahibi" src="https://resimag.com/p1/7f9d112919f.png" class="profilebadges">
                        <% } %>
             <% if(bot.ayar.has(`sitesssahip.${kisi.id}.durum`) === true) { %>
                                 <img title="Site Geliştiricisi" src="https://cdn1.iconfinder.com/data/icons/scenarium-vol-9/128/035_award_system_admin_control-256.png" class="profilebadges">
                        <% } %>
                               <% if(bot.ayar.has(`yetkili.${kisi.id}.durum`) === true) { %>
          <img title="Site Yetkilisi" src="https://resimag.com/p1/7202927da0f.png" class="profilebadges">
                        <% } %>
                      <% if(bot.ayar.has(`sertifikak.${kisi.id}.durum`) === true) { %>
                                 <img title="Onaylı Geliştirici" src="https://resimag.com/p1/9188c78b21d.png" class="profilebadges">
                        <% } %>
      
      <br>
              <% if(bot.ayar.fetch(`user.${kisi.id}.bio`)) { %>
            <br>
                <h6 style="color:#fff"><%=bot.ayar.fetch(`user.${kisi.id}.bio`)%></h6><br>
             <% } else { %>
      <h6 style="color: #eee">
        Proifl açıklaması bulunamadı.
      </h6>
             <% } %>
            
                          <% if(bot.ayar.fetch(`user.${kisi.id}.site`)) { %>
            <br>
             <a href="<%=bot.ayar.fetch(`user.${kisi.id}.site`)%>"><button type="button" class="btn btn-dark">Web Site</button></a><br>
             <% } %><br>
      
             <% if (user) { %>
       <% if (user.id === kisi.id) { %>
     <a href="/profile/<%=kisi.id%>/edit"><button type="button" class="btn btn-dark">Profil Düzenle</button></a><br>
      <br>
       <% } %>
       <% } %>
      <br><br>
