    <style>
    .profilepic {
    z-index: 10000;
    display: block;
    margin: auto;
    
    width: 150px;
    border-radius: 50%;
}
      .badgecase {
    border-radius: 4px;
    color: black;
    text-align: center;
    display: block;
    margin: auto;
    width: 80px;
    word-wrap: break-word;
    margin-top: 10px;
    padding: 5px;
    vertical-align: middle;
}
      
  .denemeknk {
    
 background-image: url("https://images4.alphacoders.com/909/thumb-1920-909912.png");

	animation: gradientBG 15s ease infinite;
}

@keyframes gradientBG {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}

.badgecase img {
    width: 50px;
  float: left;
    height: 50px;
    border-radius: 5px;
}
      #bgslide {
  box-shadow: inset 2px 80px 200px 0px #404040;
  -webkit-box-shadow: inset 2px 80px 200px 0px #404040;
  -moz-box-shadow: inset 2px 80px 200px 0px #404040;
  -o-box-shadow: inset 2px 80px 200px 0px #404040;
  flex-grow: 1;
  flex-shrink: 0;
  padding: 1rem 1.5rem; 
  outline: solid 2px #7289da;
}
      .profilebadges {
  width: 35px;
  height: 35px;
  user-select: none;
  -moz-user-select: none;
  -webkit-user-drag: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  filter: drop-shadow(0px 4px 5px rgba(0, 0, 0, 0.65));
  }

@keyframes bgmove {
  from {background-position: bottom center;}
  to {background-position: top center;}
}

#bgslide {
  animation: bgmove 30s linear infinite;
  animation-direction: alternate;
  }

@media screen and (min-width: 500px), print {
  #bgslide {
    padding-bottom: 5rem;
    padding-top: 8rem; } }

@media screen and (max-width: 500px), print {
  #bgslide {
    padding-bottom: 1rem;
    padding-top: 6rem; 
    background-size: auto !important; } }
